<!DOCTYPE html>
<html>
<head>
  <title>Four Sport Fantasy Draft</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', media: 'all'%>

  <%= action_cable_meta_tag %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">FSFootball Draft</a>
      </div>
      <div class="navbar-header button">
        <% if user_signed_in? %>
          <%= button_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-primary") %>
        <% else %>
          <%= button_to('Register', new_user_registration_path, method: :get, class: "btn btn-primary")  %>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="container-fluid">
    <div id="errors">
      <% flash.each do |key, value| %>
          <div class="alert alert-dismissable alert-<%= key %>"><%= value %><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a></div>

        <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>
